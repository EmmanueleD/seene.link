{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/:id([A-Za-z0-9_-]{6,32})",
      "destination": "/api/meta/:id",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*(bot|crawler|spider|facebookexternalhit|twitterbot|whatsapp|linkedinbot|slackbot|discordbot|telegrambot).*"
        }
      ]
    },
    {
      "source": "/:path((?!api).*)",
      "destination": "/index.html"
    }
  ]
}
